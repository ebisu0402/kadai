<!-- app/views/articles/index.html.erb -->
<h1>投稿一覧</h1>

<% if notice %>
  <p class="notice"><%= notice %></p>
<% elsif alert %>
  <p class="alert"><%= alert %></p>
<% end %>

<%= link_to '新規投稿', new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %> |
      <%= link_to article.content.truncate(100), edit_article_path(article) %> |
      <%= button_to '削除', article_path(article), method: :delete, data: { confirm: '本当に削除しますか?' } %>
    </li>
  <% end %>
</ul>
